    "version": "0.2.0",
    "configurations": [
        {
            "name": "Agent-Windows",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "args": ["--verbose"],
            "console": "integratedTerminal",
            "python": "${workspaceFolder}/venv/Scripts/python.exe"
        },
        {
            "name": "Agent-Linux",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/agent.py",
            "console": "integratedTerminal",
            "python": "${workspaceFolder}/venv/bin/python"
        }
    ]
}